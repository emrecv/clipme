{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipme",
  "version": "1.1.12",
  "identifier": "com.emre.clipme",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 700,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp",
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU3RjRDRTQwODlERDU2MTMKUldRVFZ0MkpRTTcwNTh5dktnZTFuUnpGVksweFVHb2lTRWl6QW9nOHQ5MEduK24weWdDR0ozNHEK",
      "endpoints": [
        "https://github.com/emrecv/clipme/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
       "schemes": ["clipme"]
    }
  }
}
