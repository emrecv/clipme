{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipme",
  "version": "1.1.7",
  "identifier": "com.emre.clipme",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipme",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' asset: https://asset.localhost blob: data: https://*.ytimg.com; media-src 'self' asset: https://asset.localhost blob: https://*.youtube.com; frame-src https://www.youtube.com https://youtube.com; connect-src 'self' https://api.gumroad.com https://github.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp",
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU3RjRDRTQwODlERDU2MTMKUldRVFZ0MkpRTTcwNTh5dktnZTFuUnpGVksweFVHb2lTRWl6QW9nOHQ5MEduK24weWdDR0ozNHEK",
      "endpoints": [
        "https://github.com/emrecv/clipme/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
       "schemes": ["clipme"]
    }
  }
}
